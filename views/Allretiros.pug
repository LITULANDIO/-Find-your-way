extends layout
block content
  
    .container 
    
    
      
    .col-sm-6.responsive
      .encuentra
        input#busqueda.form-control3(type='text', placeholder='Encuentra por nombre, ciudad, fecha...')
        i.fa.fa-search

      
      - var cities = ["Selecciona...", "Andalucía", "Baleares", "Canarias", "Cantabria", "Cataluña", "Galicia", "La Rioja", "Navarra", "Aragón", "Castilla-La Mancha", "Castilla y León", "Comunidad Valenciana", "Extremadura", "Comunidad Valenciana", "Madrid", "Región de Murcia"]; 
      select#sel2.intros( name="comunity") 
         each val in cities
                  -
                    let selectComunity = !retiros ? "" : retiros.comunity
                  if (selectComunity === (val) )
                    option(selected="selected")= selectComunity
                  else
                    option= val
      
      h1#title-mine.title-terapies
      .hr-line2
        br
        .container
          div.resultado 
      div.over
         
       
       each retiro in retiros
         
       
          div.total.events-link.col-sm-7.col-lg-4
            div.cousin
              div.result.thumbnail.offer.margins.links.hvr-grow-shadow
               a.image-a.img-responsive(href='/details/'+ retiro.id)
                img(src= retiro.imageUrl, width="201px" height="174px" class="image2")
                
                 
                div.tit#box.text-center
                  h3.namer #{retiro.title} 
                 
                div.local
                  img(src="https://maxcdn.icons8.com/iOS7/PNG/25/Maps/location-25.png" title="Marker" width="26" height="26")
                  |&nbsp;#{retiro.localitation}, #{retiro.comunity}
                    
                br
                div.dater
                  img(src="https://maxcdn.icons8.com/iOS7/PNG/25/Time_And_Date/calendar-25.png" title="Calendar" width="26" height="26")
                  |&nbsp;&nbsp;#{retiro.startDate}
                br      
                div.iter
                  div.lat.hidden #{retiro.lat}
                  div.long.hidden #{retiro.long}
                button.btn-warning.view-more(type="button") Ver más ...
                img(src='https://maxcdn.icons8.com/Android_L/PNG/24/Ecommerce/price_tag-24.png', title='Price Tag', width='24')
                div.tags.text-center  #{retiro.tags}

               
      if !retiros.length
        .container
          h3.null No se han encontrado retiros
        
         
    .col-sm-5
      .col.sm-12
        div.cousin
          div#maps
        
         
      
    

            
      script(src="/bower_components/jquery/dist/jquery.min.js")       
      script(src='/js/allMaps.js')
      script(src='/js/filters.js')
      script(src='/js/SelectComunity.js')
      script(src='/js/buscador.js')
          
      script(src = 'https://maps.googleapis.com/maps/api/js?key=AIzaSyD2CtWqsM0k23XnQMwJQXASOmNEkE8IAgM&callback=viewMap')
      script(src='/js/insert-title.js')
           